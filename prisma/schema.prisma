generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum SourceType {
  YOUTUBE
}

model User {
  id        String   @id @db.Uuid
  email     String   @unique
  username  String   @unique
  role      String
  createdAt DateTime

  branches    UserBranch[]
  Playlist    Playlist[]
  OnGoingSong OnGoingSong[]
}

model Branch {
  id        String   @id @db.Uuid
  name      String
  thumbnail String
  createdAt DateTime

  users       UserBranch[]
  OnGoingSong OnGoingSong[]
  Playlist    Playlist[]

  BannedSong BannedSong[]
}

model UserBranch {
  id        String   @id @db.Uuid
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  branchId  String   @db.Uuid
  branch    Branch   @relation(fields: [branchId], references: [id])
  createdAt DateTime

  @@unique([userId, branchId])
}

model Playlist {
  id        String   @id @db.Uuid
  branchId  String   @db.Uuid
  branch    Branch   @relation(fields: [branchId], references: [id])
  name      String
  isActive  Boolean
  createdAt DateTime

  createdBy   String @db.Uuid
  createdUser User   @relation(fields: [createdBy], references: [id])

  PlaylistSong PlaylistSong[]
  ScheduleSong ScheduleSong[]
}

model OnGoingSong {
  id          String     @id @db.Uuid
  branchId    String     @db.Uuid
  sourceType  SourceType
  sourceUrl   String
  order       Int
  duration    Int
  songName    String
  artistName  String
  reportCount Int
  createdAt   DateTime
  thumbnail   String?
  requestedBy String?    @db.Uuid
  playedAt    DateTime?

  branch        Branch         @relation(fields: [branchId], references: [id])
  requestedUser User?          @relation(fields: [requestedBy], references: [id])
  PlaylistSong  PlaylistSong[]
}

model BannedSong {
  id        String   @id @db.Uuid
  branchId  String   @db.Uuid
  sourceUrl String   @unique
  createdAt DateTime

  branch Branch @relation(fields: [branchId], references: [id])
}

model PlaylistSong {
  id         String   @id @db.Uuid
  playlistId String   @db.Uuid
  order      Int
  songId     String   @db.Uuid
  createdAt  DateTime

  playlist Playlist    @relation(fields: [playlistId], references: [id])
  song     OnGoingSong @relation(fields: [songId], references: [id])
}

model ScheduleSong {
  id         String   @id @db.Uuid
  playlistId String   @db.Uuid
  day        Int
  startTime  DateTime
  endTime    DateTime
  createdAt  DateTime

  playlist Playlist @relation(fields: [playlistId], references: [id])
}
